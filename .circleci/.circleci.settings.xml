<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
  <servers>
    <server>
      <id>oss</id>
      <username>${env.OSS_USERNAME}</username>
      <password>${env.OSS_PASSWORD}</password>
    </server>
  </servers>
  <profiles>
    <profile>
      <id>local-properties</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <gpg.executable>gpg2</gpg.executable>
        <gpg.passphrase>${env.GPG_PASSPHRASE}</gpg.passphrase>
        <!-- tell gpg to NOT use the default keyring from the current user's home -->
        <gpg.defaultKeyring>false</gpg.defaultKeyring>
        <!-- instead tell gpg to use the keyrings from your GPG_DIR -->
        <gpg.publicKeyring>${env.GPG_DIR}/pubring.gpg</gpg.publicKeyring>
      </properties>
    </profile>
  </profiles>

</settings>
